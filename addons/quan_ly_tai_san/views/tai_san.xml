<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tai_san_form" model="ir.ui.view">
            <field name="name">tai_san_form</field>
            <field name="model">tai_san</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ma_tai_san"/>
                            <field name="ten_tai_san"/>
                            <field name="so_serial" attrs="{'readonly': [('id', '!=', False)]}"/>
                            <field name="loai_tai_san_id"/>
                            <field name="nha_cung_cap_id"/>
                            <field name="vi_tri_id"/>
                            <field name="lich_su_su_dung_ids"/>
                            <field name="khau_hao_ids"/>

                            <field name="trang_thai" widget="selection"/>
                        </group>
                        <notebook>
                            <page string="Thông tin thêm" style="border-radius: 8px;">
                                <group>
                                    <field name="ngay_mua"/>
                                    <field name="ngay_het_han_bao_hanh"/>
                                    <field name="gia_tien_mua" widget="monetary"/>
                                    <field name="gia_tri_hien_tai" widget="monetary"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tai_san_tree" model="ir.ui.view">
            <field name="name">tai_san_tree</field>
            <field name="model">tai_san</field>
            <field name="arch" type="xml">
                <tree decoration-info="trang_thai=='Muon'" decoration-danger="trang_thai=='Hong'">
                    <field name="ten_tai_san"/>
                    <field name="ma_tai_san"/>
                    <field name="so_serial" attrs="{'readonly': [('id', '!=', False)]}"/>
                    <field name="loai_tai_san_id"/>
                    <field name="nha_cung_cap_id"/>
                    <field name="vi_tri_id"/>
                    <field name="lich_su_su_dung_ids"/>
                    <field name="khau_hao_ids"/>
                    <field name="ngay_mua"/>
                    <field name="gia_tien_mua" widget="monetary"/>
                    <field name="gia_tri_hien_tai" widget="monetary"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <record id="tai_san_search" model="ir.ui.view">
            <field name="name">tai_san_search</field>
            <field name="model">tai_san</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_tai_san"/>
                    <field name="ten_tai_san"/>
                    <field name="trang_thai"/>
                    <filter string="Mới mua" name="moi_mua" domain="[('ngay_mua', '&gt;=', context_today())]"/>
                    <filter string="Đã hết bảo hành" name="het_bh"
                            domain="[('ngay_het_han_bao_hanh', '&lt;', context_today())]"/>
                </search>
            </field>
        </record>

        <record id="action_tai_san" model="ir.actions.act_window">
            <field name="name">Tài sản</field>
            <field name="res_model">tai_san</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="tai_san_search"/>
        </record>
    </data>
</odoo>
