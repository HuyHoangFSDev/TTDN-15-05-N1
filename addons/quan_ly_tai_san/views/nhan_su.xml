<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nhan_su_form" model="ir.ui.view">
            <field name="name">nhan_su_form</field>
            <field name="model">nhan_su</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="ma_nhan_su"/>
                            <field name="ten_nhan_su"/>
                            <field name="ngay_sinh"/>
                            <field name="email"/>
                            <field name="dia_chi"/>
                            <field name="bo_phan_id"/>
                            <field name="lich_su_su_dung_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_nhan_su_tree" model="ir.ui.view">
            <field name="name">nhan_su_tree</field>
            <field name="model">nhan_su</field>
            <field name="arch" type="xml">
                <tree string="Danh sách nhân sự">
                    <field name="ma_nhan_su"/>
                    <field name="ten_nhan_su"/>
                    <field name="ngay_sinh"/>
                    <field name="email"/>
                    <field name="dia_chi"/>
                    <field name="bo_phan_id"/>
                    <field name="lich_su_su_dung_ids"/>
                </tree>
            </field>
        </record>
        <record id="nhan_su_search" model="ir.ui.view">
            <field name="name">nhan_su_search</field>
            <field name="model">nhan_su</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_nhan_su"/>
                    <field name="ten_nhan_su"/>
                    <field name="ngay_sinh"/>
                    <field name="email"/>
                    <field name="dia_chi"/>
                    <field name="bo_phan_id"/>
                    <field name="lich_su_su_dung_ids"/>
                </search>
            </field>
        </record>

        <record id="action_nhan_su" model="ir.actions.act_window">
            <field name="name">Nhân viên</field>
            <field name="res_model">nhan_su</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="nhan_su_search"/>
        </record>
    </data>
</odoo>
